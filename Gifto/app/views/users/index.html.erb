<%= render 'welcome/navbar' %>

<h1>All friends!</h1>

<table>
    <th>Name</th>
    <th>Email</th>
    
    <% @users.each do |user| %>
        <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= link_to "Show", user_path(user) %></td>
        </tr>    
    <% end %>
    
</table>