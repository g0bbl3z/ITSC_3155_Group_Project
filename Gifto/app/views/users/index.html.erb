<!-- Friends Page -->

<br>
<div class="login-wrap">
 <div class="login-html">
<div class="allTitle">All Users</div>
<br>

<table class="u-table">
    <thread>
        <tr>
            <th></th>
            <th>Name</th>
            <th>Email</th>
        </tr>
    </thread>
    
    <tbody>
    <% @users.each do |user| %>
        <tr>
            <td><%= image_tag("profile.jpg", :height => 100, :width => 100, :alt => "Profile Picture") %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            
            <% if current_user == user %>
            <td><%= link_to "Your Profile", user_path(user) %></td>
            <% else %>
            <td><%= link_to "View", user_path(user) %></td>
            <% end %>
        </tr>    
    <% end %>
    </tbody>
</table>
</div>
</div>