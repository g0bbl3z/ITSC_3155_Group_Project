<!-- Friends Page -->

<br>
<div class="login-wrap">
 <div class="login-html">
<div class="allTitle">Friends</div>
<br>

<table class="u-table">
    <thread>
        <tr>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thread>
    
    <tbody>
    <% @users.each do |user| %>
    <% if current_user != user %>
        <tr>
            <td><%= image_tag("profile.jpg", :height => 100, :width => 100, :alt => "Profile Picture") %></td>
            <td><strong><%= user.name %></strong>
            <br><%= user.email %></td>
            
            <td><%= link_to "View", user_path(user) %></td>
            <% else %>
            <!-- hide your profile from list -->
            <% end %>
        </tr>    
    <% end %>
    </tbody>
</table>
</div>
</div>