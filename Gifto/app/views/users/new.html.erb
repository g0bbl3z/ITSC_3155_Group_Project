<div class="login-wrap">
    <div class="login-html">
        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign In</label>
        <input id="tab-2" type="radio" name="tab" class="for-pwd"><label for="tab-2" class="tab">Sign up</label>
        <div class="login-form">
            <div class="sign-in-htm">
                <div class="group">
                    <%= form_for :user do |f| %>
                    <%= f.label :email, class:"label" %>
                    <%= f.text_field :email, class:"input" %>
                    <!--<label for="user" class="label">Email</label>-->
                    <!--<input id="user" type="text" class="input">-->
                </div>
                <div class="group">
                    <%= f.label :password, class:"label" %>
                    <%= f.password_field :password, class:"input" %>
                    <!--<label for="pass" class="label">Password</label>-->
                    <!--<input id="pass" type="password" class="input" data-type="password">-->
                </div>
                <div class="group">
                    <%= f.submit "Sign In", class:"button" %>
                    <!--<input type="submit" class="button" value="Sign In">-->
                </div>
                <% end %>
                <div class="hr"></div>
            </div>
            <div class="for-pwd-htm">
                <%= form_for :user, url: users_path do |f| %>
                <div class="group">
                    <%= f.label :name, class: "label" %>
                    <%= f.text_field :name, class:"input" %>
                    <!--<label for="user" class="label">Name</label>-->
                    <!--<input id="user" type="text" class="input">-->
                </div>
                <div class="group">
                    <%= f.label :email, class: "label"  %>
                    <%= f.text_field :email, class:"input" %>
                    <!--<label for="user" class="label">Email</label>-->
                    <!--<input id="user" type="text" class="input">-->
                </div>
                <div class="group">
                    <%= f.label :password, class: "label"  %>
                    <%= f.password_field :password, class:"input" %>
                    <!--<label for="user" class="label">Password</label>-->
                    <!--<input id="user" type="password" class="input">-->
                </div>
                <div class="group">
                    <%= f.submit "Create Account", class: "button" %>
                    <!--<input type="submit" class="button" value="Create Account">-->
                </div>
                <% end %>
                <div class="hr"></div>
            </div>
        </div>
    </div>
</div>