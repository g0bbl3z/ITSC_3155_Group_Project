<div class="login-wrap">
    <div class="login-html">
        <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab"> <a class="nav-link" href="login">Login</href></a class></label>
        <input id="tab-2" type="radio" name="tab" class="for-pwd"><label for="tab-2" class="tab">Create Account</label>
        <div class="login-form">
            <div class="sign-in-form">
                <%= form_for :user, url: users_path do |f| %>
                <div class="group">
                    <%= f.label :name, class: "label" %>
                    <%= f.text_field :name, class:"input" %>
                </div>
                <div class="group">
                    <%= f.label :email, class: "label"  %>
                    <%= f.text_field :email, class:"input" %>
                </div>
                <div class="group">
                    <%= f.label :password, class: "label"  %>
                    <%= f.password_field :password, class:"input" %>
                </div>
                <div class="group">
                    <%= f.submit "Create Account", class: "button" %>
                </div>
                <% end %>
                <div class="hr"></div>
            </div>
        </div>
    </div>
</div>